{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ES2020",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "rootDir": "src"
  },

  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["src/stories","vite.config.d.ts","vite.config.js","vite.config.ts"]
}
