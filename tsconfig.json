{
  "compilerOptions": {
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "CommonJS",
    /* Bundler mode */
    // "moduleResolution": "bundler",
    // "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,

    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,

    "rootDir": "src"
  },

  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "src/stories",
    "vite.config.d.ts",
    "vite.config.js",
    "vite.config.ts",
    "src/App.css",
    "src/App.tsx",
    "src/main.tsx",
    "src/index.css"
  ]
}
